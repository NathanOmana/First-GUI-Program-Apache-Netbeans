    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
try{
    float Fdegree = Float.parseFloat(jTextField1.getText());
    String Cdegree = String.format("%.2f", ((Fdegree-32)*5/9));
    
    jLabel9.setText(Cdegree + "° Celsius");
} catch(NumberFormatException e){
    jLabel9.setText("Not a real number, Try Again!");
}
    }                                        

